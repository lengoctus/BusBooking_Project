@model BookingView

@{
    ViewData["Title"] = "Bookticket";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutEmployee.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>BOOKING</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="employee" asp-controller="bookticket" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Booking</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-success">

                    <div class="card-header">
                        <h3 class="card-title">Booking</h3>
                    </div>
                    <div class="row my-3" style="margin-left: 20px; margin-top:15px">
                        <span class="item-record">
                            <a class="btn btn-block btn-info" asp-area="employee" asp-controller="bookticket" asp-action="index">
                                <i class="fas fa-arrow-circle-left"> &nbsp;</i>
                                <span style="font-size:1rem; color:aliceblue;">Back</span>
                            </a>
                        </span>
                    </div>

                    <div class="row my-3" style="margin-left: 20px; margin-top:15px">
                        <span><b>Booking Code: </b>@Model.Code</span>
                    </div>
                    <hr />
                    <!-- /.card-header -->
                    <div class="card-body" id="DetailBooking">
                        <form role="form" asp-area="employee" asp-controller="bookticket" asp-action="sendmail" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Customer Information:</label>
                                    <input type="hidden" asp-for="@Model.Id" />
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Name: </label>
                                        <input type="text" value="@Model.ClientName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Phone Number: </label>
                                        <input type="text" value="@Model.ClientPhone" class="form-control" placeholder="090-XXX-XXXX">
                                    </div>
                                </div>
                            </div>
                            <!-- input states -->

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email: </label>
                                        <input type="text" class="form-control" id="inputSuccess" value="@Model.ClientEmail" asp-for="@Model.ClientEmail" placeholder="abc@gmail.com">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ticket Type: </label>
                                        <input type="text" class="form-control" id="inputSuccess" value="@Model.ClientDescription" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <label>Booking Information:</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Day Create: </label>
                                        <input type="text" class="form-control" id="inputSuccess" value="@Model.DayCreate.ToString("f")" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Day Start: </label>
                                        <input type="text" class="form-control" value="@Model.DayStart.ToString("D")" id="inputSuccess">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Station From - Station To: </label>
                                        <input type="text" class="form-control" value="@(Model.StationNameFrom +" => "+ Model.StationNameTo)" id="inputSuccess">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Quantity Ticket:</label>
                                        <input type="text" class="form-control" value="1" id="inputSuccess">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Price:</label>
                                        <input type="text" class="form-control" value="@Model.CategoryPrice" id="inputSuccess">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <label>Seat Information:</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Bus Code:</label>
                                        <input type="text" class="form-control" id="inputSuccess" value="@Model.BusCode" />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Seat Code:</label>
                                        <input type="text" class="form-control" value="@Model.SeatCode" id="inputSuccess">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Price:</label>
                                        <input type="text" class="form-control" value="@Model.RoutePrice" id="inputSuccess">
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Create Ticket & Send Mail</button>
                            </div>

                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section scriptEmp{
    <script>

        DefaultFormBooking();
    </script>

}