@model BookingView

@{ ViewData["Title"] = "SendMail";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutEmployee.cshtml"; }
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>SEND MAIL</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="employee" asp-controller="bookticket" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Send Mail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Send Mail</h3>
                    </div>
                    <div class="row my-3" style="margin-left: 20px; margin-top:15px">

                        <span class="item-record">
                            <a class="btn btn-block btn-info" asp-area="employee" asp-controller="bookticket" asp-action="bookticket">
                                <i class="fas fa-arrow-circle-left"> &nbsp;</i>

                                <span style="font-size:1rem; color:aliceblue;">Back</span>
                            </a>
                        </span>

                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" asp-controller="bookticket" asp-action="sendmail" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" value="@ViewBag.email" class="form-control" name="email" placeholder="Enter email">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Title: </label>
                                <input type="text" value="Test" class="form-control" name="Subject" placeholder="Title Email">
                            </div>


                            <div class="form-group">
                                <label for="contentEmail">Decription:</label>
                                <textarea type="text" class="form-control" name="contentEmail" id="contentEmail">
                                    <p>
                                        Ticket successfully booked. Click <a href="https://localhost:44304">HERE</a> to pay
                                    </p>
                                
                                
                                </textarea>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">&nbsp;&nbsp;&nbsp; SEND &nbsp;&nbsp;&nbsp; </button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
                <!-- Form Element sizes -->
                <!-- /.card -->
                <!-- /.card -->

            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
