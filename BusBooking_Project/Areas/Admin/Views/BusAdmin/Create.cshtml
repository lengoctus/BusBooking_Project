@model BusBooking_Project.Models.ModelsView.BusView
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid mt-2">
    <section class="content-header">
        <div class="mx-5">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create Bus</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="bus" asp-action="index">Bus</a></li>
                        <li class="breadcrumb-item active">Create Bus</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content mx-5">
        <div id="result"></div>
        <form asp-controller="bus" asp-area="admin" asp-action="create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-8 col-md-2">
                    <img width="250" height="250" id="photo" src="~/admin/image/@Model.Image" /> <br /> <br />
                    <input type="file" class="input-ace" asp-for="Image" id="inputphoto" name="inputphoto" onchange="change()" />
                </div>
                <div class="col-sm-12 col-md-9 offset-1">
                    <div class="form-group row">
                        <label class="col-sm-1 col-form-label" align="right">Code </label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Code" class="form-control" maxlength="5" required >
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-controller="bus" asp-area="admin" asp-action="create" method="post" enctype="multipart/form-data" role="form">
                            <div class="row">
                                
                                <div class="col-sm-4">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Code</label>
                                        <input type="text" asp-validate-for="" asp-for="Code" class="form-control">
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input type="checkbox" asp-for="Active" class="form-check-input" />
                                            <label>Active</label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Code Category</label>
                                        <select asp-for="CateId" class="form-control">
                                            @foreach (var c in ViewBag.categories)
                                            {
                                                <option value="@c.Id">@c.Name</option>

                                            }
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                </div>
                                <div class="col-sm-6" style="margin-top: 73px; margin-bottom: 115px; margin-right:550px">
                                    <label>Image</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <img width="250" height="250" id="photo" src="~/admin/image/@Model.Image" /> <br /> <br />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Total Seat</label>
                                        <input type="text" asp-for="TotalSeat" class="form-control">
                                    </div>
                                    
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Seat Empty</label>
                                        <input type="text" asp-for="SeatEmpty" class="form-control">
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input type="checkbox" asp-for="Active" class="form-check-input" />
                                            <label>Active</label>
                                        </div>

                                <div class="col-sm-3">
                                    <input type="file" class="input-ace" asp-for="Image" id="inputphoto" name="inputphoto" onchange="change()" />
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <button type="submit" class="btn btn-block btn-info"><i class="fas fa-save"></i> &nbsp;SUBMIT</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>

@section script{
    <script>

        $(document).ready(function () {

            switch ('@ViewBag.Result') {
                case '@(CheckError.AlreadyName)':
                    ErrorMode('Name already. Please choose name orther.',$('#result'));
                    break;
                 case '@(CheckError.AlreadyCode)':
                    alertError('Code already. Please choose code orther.', $('#result'));
                    break;
                 case '@(CheckError.ErrorOrther)':
                    alertError('Can not connect Internet', $('#result'));
                    break;
            }


        })

        function change() {
            $('#photo').attr("src", URL.createObjectURL($('#inputphoto')[0].files[0]));
        }


    </script>
}
