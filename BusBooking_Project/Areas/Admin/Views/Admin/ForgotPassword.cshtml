@model BusBooking_Project.Models.ModelsView.AccountView
<html>
<head>
    <meta charset="utf-8">
    <title>AdminLTE 3 | Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/admin/css/ACE.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
                <div id="result"></div>
                <form asp-area="admin" asp-controller="admin" asp-action="forgotpw" method="post">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block btn-requestpw">Request new password</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a asp-area="admin" asp-controller="admin" asp-action="login">Login</a>
                </p>
            </div>
        </div>
    </div>
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/dist/js/adminlte.min.js"></script>
    <script src="~/admin/js/sweetalert2@9.js"></script>
    <script src="~/admin/js/ACE.js"></script>
    <script>
        $(document).ready(function () {
            if ('@ViewBag.Result' == "OK") {
                alertSuccess("Please check mail");
            }
            if('@ViewBag.Error'!=''){
                ErrorMode('@ViewBag.Error', $('#result'));
            }
        })
        $(document).keypress(function (e) {
            if (e.which == 13) {

            }
        });
    </script>
</body>
</html>
