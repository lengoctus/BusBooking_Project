
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

            </div>
            <!-- left column -->
            <div class="col-md-6">
                <div class="card card-info">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" asp-controller="ticketinfo" asp-action="search">
                        <div class="card-body">
                            <div class="form-group row" style="margin-top: 30px;margin-bottom: 10px">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Email:</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" name="email" id="inputEmail3" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Phone:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputPassword3" name="phone" placeholder="Phone Number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Booking Code:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputPassword3" name="bookingCode" placeholder="Booking Code">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer" align="center">
                            <button type="submit" class="btn btn-success">Search</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

@if (Model != null)
{
