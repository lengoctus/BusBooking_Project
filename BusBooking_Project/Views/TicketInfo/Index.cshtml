        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">

                </div>
                <!-- left column -->
                <div class="col-md-8">
                    <div class="card card-info">
                        <!-- /.card-header -->
                        <!-- form start -->

                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr class="text-white bg-light-green">
                                        <td>Book Code</td>
                                        <td>FullName</td>
                                        <td>Email</td>
                                        <td>Phone</td>
                                        <td>Age</td>
                                        <td>Bus Code</td>
                                        <td>Seat Code</td>
                                        <td>Day Start</td>
                                        <td>Station From</td>
                                        <td>Station To</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr class="route-row1375">
                                        <td>@Model.Code</td>
                                        <td>@Model.ClientName</td>
                                        <td>@Model.ClientEmail</td>
                                        <td>@Model.ClientPhone</td>
                                        <td>@Model.ClientDescription</td>
                                        <td>@Model.BusCode</td>
                                        <td>@Model.SeatCode</td>
                                        <td>@Model.DayStart</td>
                                        <td>@Model.StationNameFrom</td>
                                        <td>@Model.StationNameTo</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>


                        <div class="col-md-3">
                        </div>
                    </div>
                </div>

                <div class="col-md-2">

                </div>
            </div>


        </div>
    </section>













