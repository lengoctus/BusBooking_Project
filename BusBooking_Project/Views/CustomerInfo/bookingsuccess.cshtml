@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-ms-12">
            <h3 class="text-primary text-uppercase">Booking Success</h3>


            <div class="section-list">
                <h3 class="text-uppercase text-success">
                    <span class="sprite ico-drive"></span><i class="fa fa-exchange"></i>
                </h3>
                <div class="table-responsive">
                    <table class="table ">
                        <thead>
                            <tr class="text-white bg-light-green">
                                <th data-toggle="true">CodeBooking</th>
                                <th>FullName</th>
                                <th>Origin</th>
                                <th @*data-hide="phone"*@>Destination</th>
                                <th>Type</th>
                                <th>TimeGo</th>
                                <th>CodeBus</th>
                                <th>CodeSeat</th>
                                <th>Price</th>
                                <th>StatusBook</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>                      
                            <tr class="route-row1375">
                                <td>@ViewBag.d.Code</td>
                                <td>@ViewBag.d.ClientName</td>
                                <td>@ViewBag.d.StationNameFrom</td>
                                <td>@ViewBag.d.StationNameTo</td>
                                <td>Seat</td>
                                <td>@ViewBag.d.DayStart.ToString("dd/MM/yyyy hh:mm")</td>
                                <td>@ViewBag.d.BusCode</td>
                                <td>@ViewBag.d.SeatCode</td>
                                <td>
                                    <p>
                                        <strong class="text-primary">
                                            @(ViewBag.d.RoutePrice+ViewBag.d.CategoryPrice)<sup></sup>
                                        </strong>
                                    </p>
                                </td>
                                <td>waiting for progressing</td>
                                <td>
                                    <a asp-controller="customerinfo" asp-action="cancel" asp-route-id="@ViewBag.d.Id" class="btn br-btn-default btn-flat">
                                        <i class="fa fa-remove icon-flat text-primary icon-bg-default"></i>Cancel
                                    </a>
                                </td>
                            </tr>
                            


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
