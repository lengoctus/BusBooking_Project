<div>
    <!-- Nav tabs -->
    <ul class="v-tabs clearfix" role="tablist">
        <li role="presentation" class="active"><a href="#booking" aria-controls="home" role="tab" data-toggle="tab">Booking</a></li>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="booking">
            <form class="form" name="bookingPartialForm">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                        <div class="form-group">
                            <label for="">Origin</label>
                            <div class="controls">
                                <i class="fa fa-bus text-primary"></i>

                                <select class="form-control" name="cbbRouteFrom" id="cbbRouteFrom">
                                    @if (ViewBag.RoutesFrom == null)
                                    {
                                    <option value="">Choose Origin</option>
                                    }
                                    @if (ViewBag.RoutesFrom != null)
                                    {
                                        foreach (var item in ViewBag.RoutesFrom)
                                        {
                                            if (ViewBag.RoutesFrom.IndexOf(item) == 0)
                                            {
                                                <option value="@item.StationFrom" selected>@item.StationLocationFrom</option>
                                            }
                                            else
                                            {
                                                <option value="@item.StationFrom">@item.StationLocationFrom</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                        <div class="form-group">
                            <label for="">Destination</label>
                            <div class="controls">
                                <i class="fa fa-bus text-primary"></i>
                                <select class="form-control" name="cbbRouteTo" id="cbbRouteTo">
                                    @if (ViewBag.RouteTo != null)
                                    {
                                        foreach (var item in ViewBag.RouteTo)
                                        {
                                            <option value="@item.StationTo">@item.StationLocationTo</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                        <div class="form-group">
                            <label for="">Departure Date</label>
                            <div class="controls">
                                <i class="fa fa-clock-o text-primary"></i>
                                <input type="text" name="dDate" placeholder="dd/mm/yyyy" class="form-control dDate date-readonly" readonly="">
                                <small><em>Format: dd-mm-yyyy</em></small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-ms-12">
                        <div class="form-group">
                            <label for="">Number of Tickets</label>
                            <div class="controls">
                                <i class="fa fa-ticket text-primary"></i>

                                <input type="number" name="numOfTicket" placeholder="1" value="1" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6 col-xs-6 col-ms-12">
                        <button type="button" class="btn btn-primary btn-block btn-flat pageselectSeats"><i class="fa fa-ticket icon-flat bg-btn-actived"></i>Book Now</button>
                    </div>
                </div>
            </form>
        </div>
        <div role="tabpanel" class="tab-pane" id="profile">

        </div>
    </div>
</div>
