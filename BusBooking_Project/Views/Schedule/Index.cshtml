@model List<RoutesView>

@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-ms-12">
            <h3 class="text-primary text-uppercase">Route</h3>

            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="section-list" id="Star-sai-gon">
                        <h3 class="text-uppercase text-success">
                            <span class="sprite ico-drive"></span> @item.StationLocationFrom <i class="fa fa-exchange"></i> @item.StationLocationTo
                        </h3>
                        <div class="table-responsive">
                            <table class="table ">
                                <thead>
                                    <tr class="text-white bg-light-green">
                                        @*<th>STT</th>*@
                                        <th data-toggle="true">Station From</th>
                                        <th>Station To</th>
                                        <th data-hide="phone">Type</th>
                                        <th data-hide="phone">Distance</th>
                                        <th data-hide="phone">Time Run</th>
                                        <th data-hide="phone">Price</th>
                                        <th data-hide="phone">Time Go</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr class="route-row1375">
                                        @*<td>1</td>*@
                                        <td>@item.StationLocationFrom</td>
                                        <td>@item.StationLocationTo</td>
                                        <td>Seat</td>
                                        <td>@item.Length</td>
                                        <td>
                                            @item.TimeRun
                                        </td>
                                        <td>
                                            <p>
                                                <strong class="text-primary">
                                                    @item.Price<sup>VND</sup>
                                                </strong>
                                            </p>
                                        </td>
                                        <td>

                                            <a class="br-btn-flat br-watch-schedule" asp-controller="schedule" asp-route-from="@item.StationFrom" asp-route-to="@item.StationTo" asp-action="schedule_detail">
                                                <i class="fa fa-clock-o icon-flat text-success"></i>
                                            </a>
                                        </td>
                                        <td>

                                            <a asp-controller="home" asp-action="index" class="btn br-btn-default btn-flat futa-book-ticket">
                                                <i class="fa fa-ticket icon-flat text-primary icon-bg-default"></i>Book
                                            </a>
                                        </td>
                                    </tr>




                                </tbody>
                            </table>
                        </div>
                    </div>

                }
            }


        </div>
    </div>
</div>
