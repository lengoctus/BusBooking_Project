@model List<RoutesView>

<div class="container" id="login-page">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-ms-12">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="section-list">
                        <div class="table-responsive">
                            <table class="table ">
                                <thead>
                                    <tr class="text-white bg-light-green">
                                        @*<th>STT</th>*@
                                        <th>Time</th>
                                        <th data-toggle="true">Station</th>
                                        <th data-hide="phone">Distance</th>
                                        <th data-hide="phone">Duration</th>
                                        <th data-hide="phone">Price</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @*<td>1</td>*@
                                        <td><strong class="text-success">@item.TimeGo</strong></td>
                                        <td>@(item.StationLocationFrom +" - "+item.StationLocationTo)</td>
                                        <td>@item.Length</td>
                                        <td>
                                            @item.TimeRun
                                        </td>
                                        <td>
                                            <p>
                                                <strong class="text-primary">
                                                    @item.Price<sup>VND</sup>
                                                </strong>
                                            </p>
                                        </td>
                                        <td>

                                            <a asp-controller="home" asp-action="index" class="btn br-btn-default btn-flat futa-book-ticket">
                                                <i class="fa fa-ticket icon-flat text-primary icon-bg-default"></i>Book
                                            </a>
                                            <br /><br />
                                        </td>
                                    </tr>



                                </tbody>
                            </table>
                        </div>
                    </div>

                }
            }


        </div>
    </div>
</div>
